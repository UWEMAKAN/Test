<%- include ('../partials/header') %>

<div class="row">
  <div class="col-lg-4 col-md-3"></div>
  <div class="col-lg-4 col-md-6">
    <h3>Login</h3>
  </div>
  <div class="col-lg-4 col-md-3"></div>
</div>
<br>
<form class="form-group" action="/auth/login" method="post">
  <div class="row">
    <div class="col-lg-4 col-md-3"></div>
    <div class="col-lg-4 col-md-6">
      <label for="username">Username</label><br>
      <input required class="form-control" type="text" name="username" id="username">
    </div>
    <div class="col-lg-4 col-md-3"></div>
  </div><br>
  <div class="row">
    <div class="col-lg-4 col-md-3"></div>
    <div class="col-lg-4 col-md-6">
      <label for="password">Password</label><br>
      <input required class="form-control" type="password" name="password" id="password">
    </div>
    <div class="col-lg-4 col-md-3"></div>
  </div><br>
  <div class="row">
    <div class="col-lg-4 col-md-3"></div>
    <div class="col-lg-4 col-md-6">
      <input class="form-control btn btn-lg btn-success" type="submit" value="Login">
    </div>
    <div class="col-lg-4 col-md-3"></div>
  </div>
</form>
<%- include ('../partials/footer') %>