<%- include ('../partials/header') %>
  <div class='card'>
    <div class='card-header d-flex justify-content-between'>
      <h4>Question Details</h4>
      <a class="btn btn-outline-primary" href="/admin/questions">&larr;Back</a>
    </div>
    <br>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <p><%=question.question%></p>
      </div>
      <div class="col-md-3"></div>
    </div>
    <ol type="A">
      <% question.options.forEach((option, index) => { %>
        <li class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6">
            <span><%=alpha[index]%></span>&nbsp;&nbsp;&nbsp;<span><%=option%></span>
          </div>
          <div class="col-md-3"></div>
        </li>
      <% }) %>
    </ol>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <strong>Answer: </strong>&nbsp;&nbsp;&nbsp;
        <span><%=alpha[question.options.indexOf(question.answer)]%></span>&nbsp;&nbsp;&nbsp;
        <%=question.answer%>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
<%- include ('../partials/footer') %>