<%- include ('../partials/header') %>
  <form action="/admin/questions/new" method="post" class="form-group">
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <h1>New Question</h1>
      </div>
      <div class="col-lg-3"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <label for="question">Question</label>
        <br>
        <textarea required class="form-control" name="question" id="question" cols="30" rows="3"></textarea>
      </div>
      <div class="col-lg-3"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <input required type="radio" name="answer" class="radio-btn" id="optionA">&nbsp;<label for="optionA">A</label>
        <br>
        <input required class="form-control options" type="text" required name="optionA">
      </div>
      <div class="col-lg-3"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <input required type="radio" name="answer" class="radio-btn" id="optionB">&nbsp;<label for="optionB">B</label>
        <br>
        <input required class="form-control options" type="text" required name="optionB">
      </div>
      <div class="col-lg-3"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <input required type="radio" name="answer" class="radio-btn" id="optionC">&nbsp;<label for="optionC">C</label>
        <br>
        <input required class="form-control options" type="text" required name="optionC">
      </div>
      <div class="col-lg-3"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <input required type="radio" name="answer" class="radio-btn" id="optionD">&nbsp;<label for="optionD">D</label>
        <br>
        <input required class="form-control options" type="text" required name="optionD">
      </div>
      <div class="col-lg-3"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <input required type="radio" name="answer" class="radio-btn" id="optionE">&nbsp;<label for="optionE">E</label>
        <br>
        <input required class="form-control options" type="text" required name="optionE">
      </div>
      <div class="col-lg-3"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-2">
        <span><strong>Question Type</strong></span>
      </div>
      <div class="col-lg-2">
        <input required type="radio" name="questionType" class="radio-btn" id="typeMath" value="Math">&nbsp;
        <label for="typeMath">Math</label>
      </div>
      <div class="col-lg-2">
        <input required type="radio" name="questionType" class="radio-btn" id="typeEnglish" value="English">&nbsp;
        <label for="typeEnglish">English</label>
      </div>
      <div class="col-lg-3"></div>
    </div><br>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6 d-flex justify-content-end">
        <a class="btn btn-md btn-outline-primary" href="/admin/questions">Cancel</a>&nbsp;&nbsp;
        <input required class="btn btn-md btn-primary" type="submit" value="Create New">
      </div>
      <div class="col-lg-3"></div>
    </div>
  </form>
  <script src="js/newQuestionScript.js"></script>
<%- include ('../partials/footer') %>
